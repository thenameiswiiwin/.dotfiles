#!/usr/bin/env bash

# Install Git if missing
if ! command -v git &>/dev/null; then
    if [[ "$(uname)" == "Darwin" ]]; then
        /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
        eval "$(/opt/homebrew/bin/brew shellenv)"
        brew install git
    else
        sudo apt -y update && sudo apt -y install git
    fi
fi

# Ensure ~/personal directory exists
if [ ! -d "$HOME/personal" ]; then
    mkdir -p "$HOME/personal"
fi


# Clone repo if it doesn't already exist
DEV_DIR="$HOME/dev"

if [ ! -d "$DEV_DIR" ]; then
    rm -rf "$DEV_DIR"
    git clone https://github.com/thenameiswiiwin/.dotfiles "$HOME/env"
    DEV_DIR="$HOME/env"
else
    echo "Repo already exists at $DEV_DIR. Skipping clone."
fi

# Run the setup script
pushd "$DEV_DIR" || exit 1
./run
popd
