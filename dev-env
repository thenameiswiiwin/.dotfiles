#!/usr/bin/env bash
set -euo pipefail
IFS=$'\n\t'

# Enable dry-run mode if passed as argument
dry_run=0
if [[ "${1:-}" == "--dry" ]]; then
    dry_run=1
fi

# Ensure XDG_CONFIG_HOME is set
if [[ -z "${XDG_CONFIG_HOME:-}" ]]; then
    echo "XDG_CONFIG_HOME is not set. Using default: ~/.config"
    export XDG_CONFIG_HOME="$HOME/.config"
fi

# Ensure DEV_ENV is set
if [[ -z "${DEV_ENV:-}" ]]; then
    echo "Error: DEV_ENV environment variable must be set." >&2
    exit 1
fi

log() {
    if [[ $dry_run -eq 1 ]]; then
        echo "[DRY_RUN] $1"
    else
        echo "$1"
    fi
}

# Ensure dependencies (rsync) are installed
install_dependencies() {
    if ! command -v rsync &>/dev/null; then
        log "rsync not found. Installing..."
        if [[ "$(uname)" == "Darwin" ]]; then
            brew install rsync
        elif [[ "$(uname -s)" == "Linux" ]]; then
            sudo apt update && sudo apt install -y rsync
        else
            log "Unsupported OS: $(uname -s). Skipping rsync installation."
        fi
    fi
}

install_dependencies

log "Starting environment setup (DEV_ENV: $DEV_ENV)"

update_files() {
    local src="$1"
    local dest="$2"

    if [[ ! -d "$src" ]]; then
        log "Skipping: Source directory '$src' not found."
        return
    fi

    log "Syncing directories from '$src' → '$dest'"

    if [[ $dry_run -eq 0 ]]; then
        mkdir -p "$dest"
        rsync -a --delete "$src/" "$dest/"
    fi
}

copy_file() {
    local src="$1"
    local dest="$2"

    if [[ ! -f "$src" ]]; then
        log "Skipping: Source file '$src' not found."
        return
    fi

    log "Copying file: '$src' → '$dest'"

    if [[ $dry_run -eq 0 ]]; then
        mkdir -p "$(dirname "$dest")"
        cp "$src" "$dest"
    fi
}

# Update directories
update_files "$DEV_ENV/env/.config" "$XDG_CONFIG_HOME"
update_files "$DEV_ENV/env/.local" "$HOME/.local"

# Copy specific files
copy_file "$DEV_ENV/tmux-sessionizer/tmux-sessionizer" "$HOME/.local/scripts/tmux-sessionizer"
copy_file "$DEV_ENV/env/.zsh_profile" "$HOME/.zsh_profile"
copy_file "$DEV_ENV/env/.zshrc" "$HOME/.zshrc"
copy_file "$DEV_ENV/env/.xprofile" "$HOME/.xprofile"
copy_file "$DEV_ENV/env/.tmux-sessionizer" "$HOME/.tmux-sessionizer"
copy_file "$DEV_ENV/dev-env" "$HOME/.local/scripts/dev-env"

log "Environment setup completed successfully!"
