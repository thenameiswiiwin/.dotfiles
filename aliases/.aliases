# Brew
alias ball='brew cleanup && brew update && brew upgrade && brew cleanup && brew doctor'
alias bo='brew outdated'
alias bi='brew install'
alias bu='brew uninstall'
alias bl='brew list'
alias bs='brew search'

# Antibody
alias au='antibody update'
alias ab='antibody bundle < ~/.zsh_plugins.txt > ~/.zsh_plugins.sh'

# Exa
alias l='exa'
alias ll='l -l -h --git --icons'
alias la='ll -a'

# Tree
alias tree='la --tree --level=4 -a -I=.git --git-ignore'

# NeoVim
alias v='nvim'
alias vc='$HOME/.config/nvim'

# Zsh
alias zc='v $HOME/.zshrc'
alias zs='source $HOME/.zshrc'
alias za='v $HOME/.aliases'

# Port }}}
# yarn add global add kill-port
alias kill='kill-port'
alias port='sudo lsof -i'

# Help Me }}}
alias myhelp='v $HOME/.vim/plugged/vim-myhelp/doc/myhelp.txt'

# Git
alias gc='git commit -m'
alias gs='git status'
alias gpsh='git push -u'
alias gw='git worktree'
alias ghc='gh repo create'
alias ghcl='gh repo clone'
alias ghf='gh repo fork'

# Tmux
alias t='tmux'
alias cht='$HOME/bin/./tmux-cht.sh'
alias ts='$HOME/bin/./tmux-sessionizer'
alias tw='$HOME/bin/./tmux-windowizer'
alias tc="v $HOME/tmux.conf"
alias tcs="tmux source $HOME/tmux.conf"

# Cat -> Bat
alias cat='bat'

# Keyboard
alias qm='cd $HOME/qmk_firmware/keyboards/lily58/keymaps/thenameiswiiwin && v keymap.c'

# Lazy
alias brave='open -a Brave\ Browser'
alias chome='open -a Google\ Chrome'
alias spotify='open -a Spotify'
alias post='open -a Postman'
alias f='open -a Finder '
alias fh='open -a Finder .'

# Usefull stuff for presentation and seeing dotfiles
alias hidedesktop="defaults write com.apple.finder CreateDesktop -bool false && killall Finder"
alias showdesktop="defaults write com.apple.finder CreateDesktop -bool true && killall Finder"
alias showall='defaults write com.apple.finder AppleShowAllFiles YES && killall Finder'
alias hideall='defaults write com.apple.finder AppleShowAllFiles NO && killall Finder'

# Get rid of .DS_Store files recursively
alias dsclean="find . -type f -name .DS_Store -print0 | xargs -0 rm"

# Flush your dns cache
alias flush='dscacheutil -flushcache'
